@model List<Bodh.Models.tbl_Inquiry>
@*@using System.Data*@
@{
    ViewBag.Title = "Enquiry Lists";
    Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<div class="content-body">
    <div class="container-fluid">
        <!-- Row -->
        <div class="page-titles dark:bg-[#1b1b1b] rounded-ss-md flex items-center justify-between relative  mb-[1.875rem] flex-wrap z-[1] py-[0.9375rem] sm:px-[0.975rem] px-[1.875rem] bg-white">
            <h4><a href="javascript:void(0)">@ViewBag.Title</a>  </h4>
            <button type="button" id="div-download"
                    title="Click here to Download To Excel"></button>
        </div>

        <div class="row">
            <div class="row">
                <div class="col-sm-12" id="result">
                    <div class="table-data">
                        <div class="table-responsive">
                            <div id="demo-dt-basic_wrapper" class="dataTables_wrapper form-inline dt-bootstrap no-footer">
                                @*table card-table table-vcenter text-nowrap*@
                                <table class="table card-table table-vcenter text-nowrap" id="DataList">
                                    <thead>
                                        <tr>
                                            <th>SrNo.</th>
                                            <th>Date</th>
                                            <th>Name</th>
                                            <th>Mobile No</th>
                                            <th>EmailID</th>
                                            <th>Comment</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @{
                                            int sno = 1;
                                            if (Model != null)
                                            {
                                                foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td class="text-center">@(sno++)</td>
                                                        <td class="text-center">@Bodh.Models.CommonModel.FormateDtDMY(item.CreatedOn.ToString())</td>
                                                        <td class="text-left" style="word-break:break-word;">@item.Name</td>
                                                        <td class="text-center"><strong>@item.MobileNo</strong></td>
                                                        <td class="text-left" style="text-wrap: wrap;">@item.EmailId</td>
                                                        <td class="text-left" style="text-wrap: wrap;">@item.Comment</td>
                                                    </tr>
                                                }
                                            }
                                            else
                                            {
                                                <tr><td colspan="6" class="text-danger"><strong> Record Not Found !!</strong></td></tr>
                                            }
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
    {

    @Scripts.Render("~/bundles/jqueryval")
    <script>
        $(function () {
            //$('#DataList').DataTable();

            $("#DataList").DataTable({
                // paging: false,
                //"bFilter": false,
                //"info": false
            });
        })
    </script>
}
